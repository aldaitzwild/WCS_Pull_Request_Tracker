<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Search a contributor
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Search a contributor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="search-form" name="search-contributor" action="{{ path('ajax_search_contributor') }}" data-ajax-url="{{ path('ajax_search_contributor') }}">
                    <div class="mb-3">
                        <label for="contributorSearch" class="form-label">Search by GitHub name:</label>
                        <input type="search" id="contributorSearch" name="contributorSearch" required class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
                <hr>
                <div id="search-result"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

