{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {{ form_start(searchForm, {'attr': {'class': 'row row-cols-2'}}) }}
        {{ form_widget(searchForm.contributorSearch) }}
        <input type="submit" class="col btn btn-primary mt-4" value="Search"/>
        {{ form_end(searchForm) }}

    {% if result is not empty and result is defined %}
        {% if result.githubName is not null %}
            <button class="col btn btn-success text-center" type="button"
                    onclick="location.href='{{ path('project_addContributor', { 'projectId': projectId, 'contributorId': result.id }) }}'">
                Add contributor
            </button>
        {% endif %}
    {% endif %}
    </div>
{% endblock %}
