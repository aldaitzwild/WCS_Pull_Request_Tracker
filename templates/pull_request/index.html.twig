{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!
{% endblock %}

{% block body %}

	{% for pr in pullRequests %}
		<div class=" col bg-white border border-dark d-flex flex-row align-items-center justify-content-between align-content-center p-1 p-md-2 p-lg-4 my-2">
			<div class="container-fluid">
				<div class="row row-cols-4 d-flex justify-content-between">
					<div class="d-flex flex-column">
						<h1 class="project-title align-self-center m-0">PR :
						</h1>
						<a class="project-name align-self-start link-dark">{{ pr.name }}</a>
					</div>
					<div class="d-flex flex-column">
						<h1 class="project-title align-self-center m-0">Project :
						</h1>
						<a class="align-self-center">{{pr.project.name}}</a>
					</div>
					<div class="d-flex flex-column">
						<h1 class="project-title align-self-center m-0">contributor:
						</h1>
						<p class="align-self-center">{{pr.contributor.name}}</p>
					</div>
					<div class="d-flex flex-column">
						<h1 class="project-title align-self-end m-0">status:
						</h1>
						<p class="align-self-end">{{pr.status}}</p>
					</div>
				</div>
			</div>
		</div>

	{% endfor %}
{% endblock %}
