{% extends 'base.html.twig' %}

{% block title %}All Pull Request
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row row-cols-1">
			{% for pr in pullRequests %}
				<div class=" col bg-white border border-dark d-flex flex-row align-items-center justify-content-between align-content-center p-1 p-md-2 p-lg-4 my-2">
					<div class="container-fluid">
						<div class="row row-cols-1">
							<div class="d-flex flex-column">
								<a class="font-link align-self-center pb-4 " href="{{ path('pull_request_show', {id:pr.id}) }}" data-toggle="tooltip" data-placement="top" title="{{ pr.name }}">{{ pr.name }}</a>
							</div>
							<div class="row row-cols-3">
								<div class="d-flex flex-column">
									<h1 class="project-title align-self-start m-0">
										<b>Project</b>
									</h1>
									<p class="font-link align-self-start">{{pr.project.name}}</p>
								</div>
                    <div class="d-flex flex-column">
                        <h1 class="project-title align-self-center m-0">contributor:
                        </h1>
                        {% if pr.contributor is not null %}
                            <p class="align-self-center">{{ pr.contributor.githubName }}</p>
                        {% endif %}
                        <p class="project-title align-self-center text-danger">contributor not found</p>
                    </div>
								<div class="d-flex flex-column">
									<h1 class="project-title align-self-end m-0">
										<b>status</b>
									</h1>
									{% if pr.status == "closed" %}
										<i class="align-self-end pe-4 bi bi-circle-fill text-danger fs-4"></i>
									{% else %}
										<i class="align-self-end pe-4 bi bi-circle-fill text-success fs-4"></i>
									{% endif %}
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
