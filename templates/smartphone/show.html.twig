{% extends 'base.html.twig' %}

{% block title %}Smartphone{% endblock %}

{% block body %}
    <h1>Smartphone</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ smartphone.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ smartphone.name }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ smartphone.marque }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ smartphone.etat }}</td>
            </tr>
            <tr>
                <th>Systeme</th>
                <td>{{ smartphone.systeme }}</td>
            </tr>
            <tr>
                <th>Stockage</th>
                <td>{{ smartphone.stockage }}</td>
            </tr>
            <tr>
                <th>Ram</th>
                <td>{{ smartphone.ram }}</td>
            </tr>
            <tr>
                <th>Taille_ecran</th>
                <td>{{ smartphone.tailleEcran }}</td>
            </tr>
            <tr>
                <th>Reseau</th>
                <td>{{ smartphone.reseau }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    <img class="img-thumbnail " src="{{ asset(smartphone.photo) }}" alt="{{ smartphone.name }}">
 
                </td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ smartphone.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_smartphone_index') }}">back to list</a>

    <a href="{{ path('app_smartphone_edit', {'id': smartphone.id}) }}">edit</a>

    {{ include('smartphone/_delete_form.html.twig') }}
